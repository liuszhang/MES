@model DashboardSourceModel

@Html.DevExpress().DashboardViewer(settings => {
    settings.Name = "dashboardViewer1";
    settings.CallbackRouteValues = new { Controller = "Samples", Action = "SalesDetailsPartial" };
    settings.ExportRouteValues = new { Controller = "Samples", Action = "SalesDetailsPartialExport" };
    settings.AllowExportDashboardItems = true;
    settings.Width = new Unit("100%");
    settings.Height = new Unit("800px");
    settings.CalculateHiddenTotals = true;
    settings.ClientSideEvents.ItemClick = "function(s, e) { onItemClick(s, e); }";
    settings.ClientSideEvents.Init = "function(s, e) { initPopup(s, e); }";
    settings.ClientSideEvents.ItemVisualInteractivity = "function(s, e) { onItemVisualInteractivity(s, e); }";
}).BindToSource(Model).GetHtml()